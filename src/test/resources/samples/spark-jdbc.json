{
  "tables": [
    {
      "pattern": ".*\\.json",
      "path": "SPARK_HOME/examples/src/main/resources",
      "format": "json"
    },
    {
      "pattern": ".*\\.csv",
      "path": "SPARK_HOME/examples/src/main/resources",
      "format": "csv",
      "options": {
        "header": "true",
        "inferSchema": "true",
        "delimiter": ";"
      }
    },
    {
      "pattern": "people",
      "path": "SPARK_HOME/examples/src/main/resources/people",
      "format": "json"
    }
  ]
}